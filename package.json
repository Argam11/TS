{
  "name": "typescript-vue3-presentation",
  "version": "1.0.0",
  "description": "Comprehensive TypeScript and Vue 3 Presentation with Slidev",
  "type": "module",
  "scripts": {
    "dev": "slidev",
    "build": "slidev build",
    "export": "slidev export",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "dev:demo": "cd demo-app && npm run dev",
    "build:demo": "cd demo-app && npm run build",
    "type-check:demo": "cd demo-app && npm run type-check",
    "server:install": "cd server && npm install",
    "server:graphql": "cd server && npm run dev:graphql",
    "server:rest": "cd server && npm run dev:rest",
    "server:both": "cd server && npm run dev:both",
    "generate:gql": "graphql-codegen --config codegen.yml",
    "generate:rest": "openapi-typescript http://localhost:3000/api/swagger.json -o ./demo-app/src/generated/rest-api.ts",
    "ci:check": "npm run type-check && npm run type-check:demo",
    "setup": "npm install && cd demo-app && npm install && cd ../server && npm install"
  },
  "dependencies": {
    "@slidev/cli": "^0.49.0",
    "@slidev/theme-default": "^0.25.0",
    "js-confetti": "^0.13.1",
    "vue": "^3.4.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "^5.0.0",
    "@graphql-codegen/typescript": "^4.0.1",
    "@graphql-codegen/typescript-operations": "^4.0.1",
    "@graphql-codegen/typescript-vue-apollo": "^4.0.0",
    "@types/node": "^20.10.0",
    "concurrently": "^8.2.2",
    "openapi-typescript": "^7.10.1",
    "typescript": "^5.3.3",
    "vite": "^5.0.0"
  }
}
