{
  "name": "typescript-demo-servers",
  "version": "1.0.0",
  "description": "GraphQL and REST API servers for TypeScript type generation demo",
  "type": "module",
  "scripts": {
    "dev:graphql": "nodemon --exec tsx graphql-server/index.ts",
    "dev:rest": "nodemon --exec tsx rest-server/index.ts",
    "dev:both": "concurrently \"npm run dev:graphql\" \"npm run dev:rest\"",
    "build": "tsc",
    "start:graphql": "node dist/graphql-server/index.js",
    "start:rest": "node dist/rest-server/index.js"
  },
  "dependencies": {
    "@apollo/server": "^4.10.0",
    "graphql": "^16.8.1",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@types/express": "^4.17.21",
    "@types/cors": "^2.8.17",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.6",
    "@types/node": "^20.10.0",
    "typescript": "^5.3.3",
    "tsx": "^4.7.0",
    "nodemon": "^3.0.2",
    "concurrently": "^8.2.2"
  }
}

